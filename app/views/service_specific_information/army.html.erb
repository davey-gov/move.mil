<%- @page_title = 'Service-Specific Information' -%>

<%= render partial: 'shared/contextual_header', locals: {page_title: @page_title, parent_pages: []} %>

<div class="usa-section main-section">
  <h1><%= @page_title %></h1>

  <%= render partial: 'sidenav', locals: {'branches': @branches, selected: 'army'} %>

  <div class="sidenav-body svc-spec-body">
    <ul class="usa-accordion sidebar-accordion">
      <li>
        <button class="usa-accordion-button" aria-controls="customer-service">
          <h4>Customer Service Info</h4>
        </button>
        <div id="customer-service" class="usa-accordion-content">
          <%= render partial: 'customer-service', locals: {'contact': @branch.branch_of_service_contact, 'policies': [{'name': 'Army Policy for Personally Procured Moves (PPM) and NTS (Non-Temporary Storage)', 'url': 'https://www.move.mil/news/2017%20Army%20G4%20PPM%20Policy.pdf'}, {'name': 'Army NTS Release Policy', 'url': 'https://www.move.mil/documents/dod/Army_NTS_Release_Policy_20_October_2016.pdf'}]} %>
        </div>
      </li>
    </ul>

    <div class="usa-grid-full">
      <div class="usa-width-two-thirds">
        <%= render partial: 'posts', object: @branch.service_specific_posts %>
      </div>

      <div class="sidebar-section usa-width-one-third">
        <h4>Customer Service Info</h4>
        <%= render partial: 'customer-service', locals: {'contact': @branch.branch_of_service_contact, 'policies': [{'name': 'Army Policy for Personally Procured Moves (PPM) and NTS (Non-Temporary Storage)', 'url': 'https://www.move.mil/news/2017%20Army%20G4%20PPM%20Policy.pdf'}, {'name': 'Army NTS Release Policy', 'url': 'https://www.move.mil/documents/dod/Army_NTS_Release_Policy_20_October_2016.pdf'}]} %>
      </div>
    </div>
  </div>
</div>
